<!DOCTYPE html>

<html lang="en">
  <header>
    <% include ./partials/_header %>
  </header>
  <head>
    <title>TinyApp URL Login</title>
  </head>
  <body style="font-size:20px; padding:50px;">
    <% let match = 0 %>
    <% Object.keys(users).forEach(function(usr) { %>
      <% if (user === usr) { %>
        <% match++; %>
      <% } %>
    <% }); %>
    <% if (match) { %>
      <form action="/logout" method="POST" style="margin:150">
        <input type="submit" value="Logout">
      </form>
    <% } else { %>
      <form action="/login" method="POST" style="margin:150">
        <div><label for="user_id">Username:</label>
        <input id="user_id" type="text" name="user_id" style="width: 300px"></div>
        <div><label for="password">Password:</label>
        <input id="password" type="password" name="password" style="width: 300px"></div>
        <input type="submit" value="Login">
      </form>
    <% } %>
  </body>
</html>